  <servlet>
    <servlet-name>StoreServlet</servlet-name>
    <description></description>
    <servlet-class>
      edu.uw.apl.tupelo.http.server.HttpStoreServlet
    </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>StoreServlet</servlet-name>
    <url-pattern>/storage/*</url-pattern>
  </servlet-mapping>	

  <servlet-mapping>
    <servlet-name>StoreServlet</servlet-name>
    <url-pattern>/uuid</url-pattern>
  </servlet-mapping>	

  <servlet-mapping>
    <servlet-name>StoreServlet</servlet-name>
    <url-pattern>/usablespace</url-pattern>
  </servlet-mapping>	

  <servlet-mapping>
    <servlet-name>StoreServlet</servlet-name>
    <url-pattern>/newsession</url-pattern>
  </servlet-mapping>	

  <servlet-mapping>
    <servlet-name>StoreServlet</servlet-name>
    <url-pattern>/enumerate</url-pattern>
  </servlet-mapping>	


  <servlet-mapping>
    <servlet-name>StoreServlet</servlet-name>
    <url-pattern>/data/*</url-pattern>
  </servlet-mapping>	

  <servlet-mapping>
    <servlet-name>StoreServlet</servlet-name>
    <url-pattern>/digest/*</url-pattern>
  </servlet-mapping>	

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
</web-app>
